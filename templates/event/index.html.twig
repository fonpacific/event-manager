{% extends 'base.html.twig' %}
{% import 'macro/events.html.twig' as event_macro %}

{% block title %}Event index{% endblock %}
{% block container_class %} container-fluid {% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>Event index</h1>
        </div>
    </div>

    {% if is_granted ('ROLE_ORGANIZER') %}
    <div class="row">
        <div class="col">
            <a class="btn btn-success" href="{{ path('app_event_new') }}">Create new</a>
        </div>
    </div>

{% endif %}

<div class="row mt-4">
        {% for event in events %}
            <div class="col-12 col-lg-3 mb-3">
                {{ event_macro.default_card(event) }}
            </div>
        {% else %}
            <div class="col">
                <p>no records found</p>
            </div>
        {% endfor %}
    </div>
   
{% endblock %}
